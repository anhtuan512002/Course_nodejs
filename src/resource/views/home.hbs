<div class="mt-4">
    <div class="row">
        <!-- khoi tao du lieu tu courses lay trong database mongodb  -->
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <!-- moi du lieu duoc cho vao cac card gom cac thong tin sau -->
            <div class="card card-course-item">
                <!-- hinh anh cua khoa hoc -->
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.img}}" alt="{{this.name}}">
                </a>
                <!-- thong tin cua khoa hoc -->
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>